import React, { useState } from 'react'
import { motion } from 'framer-motion'

// Simple portfolio app for a 2nd-year student
// Sections: Hero (branding), Projects, About, Contact form

export default function PortfolioApp() {
  return (
    <div className="font-sans text-gray-800 bg-gray-50 min-h-screen">
      <Header />
      <main className="max-w-5xl mx-auto px-6 py-10 space-y-20">
        <Hero />
        <Projects />
        <About />
        <Contact />
      </main>
      <Footer />
    </div>
  )
}

function Header() {
  return (
    <header className="bg-white shadow-sm">
      <div className="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
        <div className="text-xl font-bold text-indigo-600">MyPortfolio</div>
        <nav className="space-x-6 text-sm font-medium">
          <a href="#projects" className="hover:text-indigo-600">Projects</a>
          <a href="#about" className="hover:text-indigo-600">About</a>
          <a href="#contact" className="hover:text-indigo-600">Contact</a>
        </nav>
      </div>
    </header>
  )
}

function Hero() {
  return (
    <section className="flex flex-col items-center text-center space-y-4">
      <motion.img initial={{ opacity: 0, y: -10 }} animate={{ opacity: 1, y: 0 }} src="https://avatars.githubusercontent.com/u/9919?v=4" alt="Profile" className="w-32 h-32 rounded-full shadow-md" />
      <h1 className="text-3xl font-bold">Hi, I'm Aanya Dubey</h1>
      <p className="max-w-xl text-gray-600">I’m a 2nd-year Computer Science student passionate about web development and problem solving. I love learning new technologies and building projects that help me grow as a developer.</p>
      <a href="#contact" className="px-5 py-2 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700">Get in touch</a>
    </section>
  )
}

function Projects() {
  const projects = [
    {
      title: 'Weather Forecast App',
      desc: 'A React app that fetches live weather data using OpenWeather API and shows forecasts with interactive maps.',
      tech: ['React', 'API', 'Leaflet'],
      link: '#',
    },
    {
      title: 'Social Media Demo',
      desc: 'Mini social platform with posts, likes, and comments built with React and localStorage.',
      tech: ['React', 'Tailwind'],
      link: '#',
    },
    {
      title: 'Portfolio Website',
      desc: 'This personal portfolio project to showcase my work, skills, and contact details.',
      tech: ['React', 'Tailwind'],
      link: '#',
    },
  ]
  return (
    <section id="projects" className="space-y-8">
      <h2 className="text-2xl font-bold">Projects</h2>
      <div className="grid md:grid-cols-3 gap-6">
        {projects.map((p, i) => (
          <motion.div key={i} initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} className="bg-white p-4 rounded-xl shadow hover:shadow-md transition">
            <h3 className="font-semibold text-lg">{p.title}</h3>
            <p className="text-sm text-gray-600 mt-2">{p.desc}</p>
            <div className="mt-2 flex flex-wrap gap-2">
              {p.tech.map((t) => (
                <span key={t} className="px-2 py-1 text-xs bg-indigo-50 text-indigo-700 rounded">{t}</span>
              ))}
            </div>
            <a href={p.link} className="inline-block mt-3 text-sm text-indigo-600 hover:underline">View project</a>
          </motion.div>
        ))}
      </div>
    </section>
  )
}

function About() {
  return (
    <section id="about" className="space-y-4">
      <h2 className="text-2xl font-bold">About Me</h2>
      <p className="text-gray-700 max-w-3xl">
        I’m currently pursuing a B.Tech in Computer Science. As a second-year student, I’m actively learning front-end development (HTML, CSS, JavaScript, React) and exploring back-end technologies. 
        My interests include building responsive web apps, UI/UX design, and solving coding challenges. 
        I aim to gain internship experience and contribute to impactful projects.
      </p>
    </section>
  )
}

function Contact() {
  const [form, setForm] = useState({ name: '', email: '', message: '' })
  const [submitted, setSubmitted] = useState(false)

  function handleChange(e) {
    setForm({ ...form, [e.target.name]: e.target.value })
  }

  function handleSubmit(e) {
    e.preventDefault()
    console.log('Form submitted:', form)
    setSubmitted(true)
  }

  return (
    <section id="contact" className="space-y-4">
      <h2 className="text-2xl font-bold">Contact Me</h2>
      {!submitted ? (
        <form onSubmit={handleSubmit} className="grid gap-4 max-w-md">
          <input name="name" value={form.name} onChange={handleChange} placeholder="Your name" className="p-2 border rounded" required />
          <input name="email" value={form.email} onChange={handleChange} placeholder="Your email" className="p-2 border rounded" required type="email" />
          <textarea name="message" value={form.message} onChange={handleChange} placeholder="Your message" className="p-2 border rounded h-28" required />
          <button type="submit" className="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">Send</button>
        </form>
      ) : (
        <div className="p-4 bg-green-50 text-green-700 rounded">Thanks! I’ll get back to you soon.</div>
      )}
    </section>
  )
}

function Footer() {
  return (
    <footer className="bg-white mt-20 py-6 text-center text-sm text-gray-500">
      © {new Date().getFullYear()} Aanya Dubey — Built with ❤️ using React & Tailwind
    </footer>
  )
}
